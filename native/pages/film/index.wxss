/* pages/index/index.wxss */

page {
  background: #ebebeb;
  padding-bottom: 100rpx;
}

.banner {
  height: 420rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.playing-item {
  height: auto;
  margin: 34rpx;
  box-shadow: 0.5px 0.5px 1px #a8a8a8;
  background: #fff;
}

.film-image {
  width: 100%;
  height: 384rpx;
}

.info-container {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.name {
  font-size: 26rpx;
}

.total {
  font-size: 22rpx;
  color: #9a9a9a;
}

.grade {
  font-size: 36rpx;
  color: #f78360;
}

.time {
  color: #f78360;
  font-size: 26rpx;
}

.more {
  display: flex;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #aaa;
  border-radius: 30rpx;
  width: 320rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #616161;
}

.split-line {
  border-bottom: 1px solid #a8a8a8;
  margin: 80rpx 0;
}

.split-text {
  display: flex;
  margin: 0 auto;
  margin-bottom: -20rpx;
  justify-content: center;
  align-items: center;
  color: #eee;
  background: #a7a7a7;
  width: 130rpx;
  height: 40rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}
