page {
  background: #ebebeb;
}
.film-image {
  width: 100%;
  height: 420rpx;
}
.info-container {
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 200rpx;
}
.title {
  border-left: 16px solid RGB(228, 200, 156);
  padding-left: 10rpx;
  font-size: 32rpx;
}
.info {
  padding: 20rpx 40rpx 0 40rpx;
}
.buy-now {
  position: fixed;
  text-align: center;
  width: 100%;
  bottom: 40rpx;
}
.buy-now button {
  display: flex;
  width: 300rpx;
  height: 72rpx;
  background-color: #fe8233;
  color: #fff;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  border-radius: 36rpx;
}
